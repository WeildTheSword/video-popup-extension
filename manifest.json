{
  "manifest_version": 3,
  "name": "Media Pop-up Extension",
  "version": "4.0",
  "description": "A Chrome extension that shows a media pop-up window when specific words are highlighted.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["Cat.png", "Dog.png", "Turtle.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
